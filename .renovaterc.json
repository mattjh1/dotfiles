{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["dotfiles/dot_config/nvim/**/*.lua"],
      "matchStrings": [
        "version\\s*=\\s*[\"'](?<currentValue>\\^?[0-9]+\\.[0-9]+\\.[0-9]+)[\"'][\\s,]*--\\s*(?<depName>[\\w-]+/[\\w.-]+)"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchFileNames": ["dotfiles/dot_config/nvim/**"],
      "updateTypes": ["minor", "patch"]
    }
  ]
}
