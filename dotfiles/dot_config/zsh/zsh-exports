export PATH="$PYENV_ROOT/bin:$PATH"
export PATH="/usr/local/bin:$PATH"
export VSCODE_USER="/Users/holmgmat/Library/Application Support/Code/User"
export EDITOR=nvim

zsh_add_file "zsh-secrets"
zsh_add_file "zsh-lazy-load"

